<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewItemSearchResultProduct"
        style="@style/Widget.Material3.CardView.Elevated"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginHorizontal="14dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewItemSearchResultProduct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@color/brown" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/textViewItemSearchResultProductName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="제품명"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/cardViewItemSearchResultProduct"
        app:layout_constraintEnd_toEndOf="@id/cardViewItemSearchResultProduct"
        app:layout_constraintTop_toBottomOf="@id/cardViewItemSearchResultProduct"/>
</androidx.constraintlayout.widget.ConstraintLayout>