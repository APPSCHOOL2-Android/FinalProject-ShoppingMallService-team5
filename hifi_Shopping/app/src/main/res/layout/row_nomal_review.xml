<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="334dp"
    android:layout_height="120dp"
    android:background="@drawable/my_subscribe_review"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/rowDetailNormalReviewUserProfileImage"
        android:layout_width="49dp"
        android:layout_height="41dp"
        android:src="@drawable/sample_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rowDetailNormalReviewTextViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/notosans_black"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/rowDetailNormalReviewUserProfileImage"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="닉네임" />

    <TextView
        android:id="@+id/rowDetailNormalReviewTextViewContext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/notosans_eb"
        android:gravity="start|left|center_vertical"
        android:text="리뷰 내용입니다 리뷰 내용입니다 리뷰 내용입니다 리뷰 내용입니다 리뷰 내용입니다 리뷰 내용입니다"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/rowDetailNormalReviewUserProfileImage"
        app:layout_constraintTop_toBottomOf="@+id/rowDetailNormalReviewTextViewName" />
</androidx.constraintlayout.widget.ConstraintLayout>