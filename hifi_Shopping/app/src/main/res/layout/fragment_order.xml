<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".buy.OrderFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="true"
        android:minHeight="?attr/actionBarSize"
        app:layout_scrollFlags="scroll|enterAlways"
        app:menu="@menu/menu_home"
        app:navigationIcon="@drawable/chevron_left_24px"
        app:navigationIconTint="#846058"
        app:title="주문서 작성"
        app:titleCentered="true"
        app:titleTextColor="#846058" />

    <!-- ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#F0EFEF">

        <!-- 여기에 스크롤 가능한 콘텐츠를 배치합니다. -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F0EFEF"
            android:orientation="vertical">

            <!-- 다양한 뷰 및 내용을 추가합니다. -->

            <!-- 하단에 고정된(sticky) 버튼 -->
            <LinearLayout
                android:id="@+id/orderUserGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/orderUserToggle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:elegantTextHeight="true"
                        android:fontFamily="@font/notosanskr_bold"
                        android:text="주문자 정보"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    <ImageButton
                        android:id="@+id/orderUserBtnToggle"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/expand_less_24px" />
                </LinearLayout>

                <Button
                    android:id="@+id/orderUserBtnAuth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="#C8A4A4"
                    android:elegantTextHeight="true"
                    android:fontFamily="@font/notosanskr_bold"
                    android:text="최초 1회 본인 인증"
                    app:cornerRadius="5dp" />

                <LinearLayout
                    android:id="@+id/orderUserLayoutAuthComplete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/orderUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#DADADA"
                        android:elegantTextHeight="true"
                        android:fontFamily="@font/notosanskr_regular"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="김소윤" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="#DADADA"
                            android:elegantTextHeight="true"
                            android:fontFamily="@font/notosanskr_regular"
                            android:paddingLeft="15dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="010-0000-0000" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#DADADA"
                            android:elegantTextHeight="true"
                            android:fontFamily="@font/notosanskr_regular"
                            android:padding="5dp"
                            android:text="인증완료" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/orderDeliverGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/orderDeliverToggle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:elegantTextHeight="true"
                        android:fontFamily="@font/notosanskr_bold"
                        android:text="배송지"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    <ImageButton
                        android:id="@+id/orderDeliverBtnToggle"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/expand_less_24px" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <LinearLayout
                        android:id="@+id/orderDeliverBtnSelectGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="#D7D7D7"
                            android:elegantTextHeight="true"
                            android:fontFamily="@font/notosanskr_bold"
                            android:scaleX="0.9"
                            android:scaleY="0.6"
                            android:text="1번 주소"
                            android:textColor="#727272"
                            android:textScaleX="0.8"
                            android:textSize="16sp"
                            app:cornerRadius="5dp" />

                        <Button
                            android:id="@+id/button4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:backgroundTint="#D7D7D7"
                            android:elegantTextHeight="true"
                            android:fontFamily="@font/notosanskr_bold"
                            android:scaleX="0.9"
                            android:scaleY="0.6"
                            android:text="2번 주소"
                            android:textColor="#727272"
                            android:textScaleX="0.8"
                            android:textSize="16sp"
                            app:cornerRadius="5dp" />

                        <Button
                            android:id="@+id/button3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:backgroundTint="#D7D7D7"
                            android:elegantTextHeight="true"
                            android:fontFamily="@font/notosanskr_bold"
                            android:scaleX="0.9"
                            android:scaleY="0.6"
                            android:text="3번 주소"
                            android:textColor="#727272"
                            android:textScaleX="0.8"
                            android:textSize="16sp"
                            app:cornerRadius="5dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/orderDeliverNameGroup"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elegantTextHeight="true"
                            android:fontFamily="@font/notosanskr_bold"
                            android:text="받으실 분"
                            android:textColor="#8A8A8A" />

                        <EditText
                            android:id="@+id/orderDeliverEditName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="#D9D9D9"
                            android:elegantTextHeight="true"
                            android:ems="10"
                            android:fontFamily="@font/notosanskr_regular"
                            android:inputType="text"
                            android:text="김소윤"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/orderDeliverPhoneGroup"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elegantTextHeight="true"
                            android:fontFamily="@font/notosanskr_bold"
                            android:text="전화번호"
                            android:textColor="#8A8A8A" />

                        <EditText
                            android:id="@+id/orderDeliverEditPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="#D9D9D9"
                            android:elegantTextHeight="true"
                            android:ems="10"
                            android:fontFamily="@font/notosanskr_regular"
                            android:inputType="text"
                            android:text="01011112222"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/orderDeliverAddrGroup"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elegantTextHeight="true"
                            android:fontFamily="@font/notosanskr_bold"
                            android:text="주소"
                            android:textColor="#8A8A8A" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/orderDeliverEditAddr"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:backgroundTint="#D9D9D9"
                                android:elegantTextHeight="true"
                                android:ems="10"
                                android:fontFamily="@font/notosanskr_regular"
                                android:hint="주소 입력"
                                android:inputType="text"
                                android:text="XX시 XX구 XX번지"
                                android:textSize="13sp" />

                            <Button
                                android:id="@+id/orderDeliverEditBtnSearch"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="wrap_content"
                                android:layout_height="38dp"
                                android:layout_gravity="center"
                                android:elegantTextHeight="true"
                                android:fontFamily="@font/notosanskr_regular"
                                android:text="주소 검색"
                                android:textColor="#727272"
                                android:textSize="12dp"
                                app:cornerRadius="5dp"
                                app:strokeColor="#D9D9D9" />

                        </LinearLayout>

                        <EditText
                            android:id="@+id/orderDeliverEditAddrDetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="#D9D9D9"
                            android:elegantTextHeight="true"
                            android:ems="10"
                            android:fontFamily="@font/notosanskr_regular"
                            android:hint="상세 주소 입력"
                            android:inputType="text"
                            android:text="XX동 XX호"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/orderDeliverMemoGroup"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/orderPayBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_vertical|end"
        android:layout_margin="10dp"
        android:background="@drawable/btn_round"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="12dp"
        android:paddingRight="15dp"
        android:paddingBottom="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/orderPayBtnCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:elegantTextHeight="true"
                android:fontFamily="@font/notosanskr_bold"
                android:text="Total 0 Items"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/orderPayBtnTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elegantTextHeight="true"
                android:fontFamily="@font/notosanskr_bold"
                android:text="00000원"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:elegantTextHeight="true"
                android:fontFamily="@font/notosanskr_bold"
                android:text="결제 하기"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:rotation="180"
                app:srcCompat="@drawable/chevron_left_24px"
                app:tint="@color/white" />
        </LinearLayout>
</LinearLayout>

</LinearLayout>
